<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_4sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp">

        <TextView
            android:id="@+id/tvDeleteAccountMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Delete account"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/warning"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/delete_account_warning_text_one"
            android:textColor="@color/color_one_dark_one"
            android:textSize="@dimen/_14sdp"
            app:backgroundTint="@color/color_one_light_two"
            app:cornerRadius="@dimen/_3sdp"
            app:icon="@drawable/alert_icon"
            app:iconSize="@dimen/_24sdp"
            app:iconTint="@color/color_one_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDeleteAccountMessage" />




           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/tilPassword"
               style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
               android:layout_width="@dimen/_240sdp"
               android:layout_height="wrap_content"
               android:baselineAligned="false"
               android:layout_marginTop="@dimen/_8sdp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/warning"
               app:boxStrokeColor="@color/color_one_dark"
               app:cursorColor="@color/color_one_dark"
               app:hintTextColor="@color/color_one_dark">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/etPassword"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="1"
                   android:fontFamily="@font/roboto_medium"
                   android:hint="Enter Password"
                   android:inputType="textPersonName"
                   android:padding="10dp"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_14ssp"
                    />
           </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btDeleteCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_19sdp"
            android:backgroundTint="#D6D6D6"
            android:fontFamily="@font/roboto_medium"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:cornerRadius="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilPassword"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btDeleteConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_19sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:backgroundTint="@color/color_one_dark"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/delete_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:cornerRadius="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.dtu.deltecdtu.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_subListFragment"
            app:destination="@id/subListFragment"

            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/subListFragment"
        android:name="com.dtu.deltecdtu.fragments.notices.SubListFragment"
        android:label="fragment_sub_list"
        tools:layout="@layout/fragment_sub_list" >
        <argument
            android:name="subList"
            app:argType="com.dtu.deltecdtu.model.NoticeModel" />
    </fragment>
</navigation>